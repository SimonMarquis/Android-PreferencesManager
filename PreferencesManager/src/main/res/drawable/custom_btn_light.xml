<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/btn_shadow_light" />
                    <corners android:radius="@dimen/btn_radius" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="@dimen/btn_shadow_size">
                <shape>
                    <solid android:color="@color/btn_background_light_pressed" />
                    <corners android:radius="@dimen/btn_radius" />
                    <padding android:left="@dimen/btn_padding" android:top="@dimen/btn_padding" android:right="@dimen/btn_padding" android:bottom="@dimen/btn_padding" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="@color/btn_shadow_light" />
                    <corners android:radius="@dimen/btn_radius" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="@dimen/btn_shadow_size">
                <shape>
                    <solid android:color="@color/btn_background_light_normal" />
                    <corners android:radius="@dimen/btn_radius" />
                    <padding android:left="@dimen/btn_padding" android:top="@dimen/btn_padding" android:right="@dimen/btn_padding" android:bottom="@dimen/btn_padding" />
                    <stroke android:width="1dp" android:color="@color/btn_shadow_light" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>